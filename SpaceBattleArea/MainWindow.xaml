<Window x:Class="SpaceBattleArea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBattleArea"
        mc:Ignorable="d"
        Title="Space Battle Area" Height="700" Width="550">
    <Canvas Name = "MyCanvas" Focusable="True" Background="Black" 
            KeyDown="OnKeyDown" KeyUp="OnKeyUp">

        <Rectangle Name="player" Height="50" Width="60" Fill="Green" 
                   Canvas.Top="590" Canvas.Left="245" />


        <Label Name ="Score" Content="Score: 0" FontSize="20" FontWeight="Bold" Foreground="White" />
        <Label Name ="Health" Content="Health: 100" FontSize="20" FontWeight="Bold" Foreground="White" 
               Canvas.Left="400" />

    </Canvas>
</Window>
